            ]
        },
        "subnets": {
            "value": [
                {
                    "name": "alteonsubnet",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                }
            ]
        },
        "publicIpAddressName": {
            "value": "alteonpublic-ip"
        },
        "publicIpAddressType": {
            "value": "Dynamic"
        },
        "publicIpAddressSku": {
            "value": "Basic"
        },
        "virtualMachineName": {
            "value": "alteonVM"
        },
        "virtualMachineRG": {
            "value": ""
