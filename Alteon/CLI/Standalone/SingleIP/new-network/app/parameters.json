        "osDiskType": {
            "value": "Premium_LRS"
        },
        "virtualMachineSize": {
            "value": "Standard_DS1_v2"
        },
        "adminUsername": {
            "value": "radware"
        },
        "adminPassword": {
            "value": ""
        },
        "diagnosticsStorageAccountName": {
            "value": ""
        },
        "diagnosticsStorageAccountId": {
            "value": ""
